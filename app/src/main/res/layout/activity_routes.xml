<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".RoutesActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvRoutesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Horarios"
        android:textColor="@color/secondary"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />

    <!-- Imagen 1 -->

    <!-- Primera tarjeta -->
    <ImageView
        android:id="@+id/imgCamion1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/camion_alimentadora_2"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRoutesTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoute1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgCamion1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/beige">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De: Terminal Delta\nHacia: Col. San Carlos la Roncha"
                android:textColor="#203A39"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Letrero amarillo sobre el CardView 1 (ya está como CardView) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLabelA72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFD600"
        app:layout_constraintStart_toStartOf="@id/cardRoute1"
        app:layout_constraintBottom_toTopOf="@id/cardRoute1">
        <TextView
            android:id="@+id/tvLabelA72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-72"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </androidx.cardview.widget.CardView>

    <!-- Imagen 2 -->

    <ImageView
        android:id="@+id/imgCamion2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/camion_alimentadora"
        android:scaleType="fitCenter"
        android:scaleX="-1"
        app:layout_constraintTop_toBottomOf="@id/cardRoute1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Segunda tarjeta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoute2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgCamion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/beige">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De: Terminal Delta\nHacia: Col. San Carlos la Roncha"
                android:textColor="#203A39"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Letrero amarillo sobre el CardView 2 (como CardView) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLabelA96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFD600"
        app:layout_constraintStart_toStartOf="@id/cardRoute2"
        app:layout_constraintBottom_toTopOf="@id/cardRoute2">
        <TextView
            android:id="@+id/tvLabelA96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-96"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </androidx.cardview.widget.CardView>

    <!-- Imagen 3 -->
    <ImageView
        android:id="@+id/imgCamion3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/camion_express"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/cardRoute2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tercera tarjeta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoute3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgCamion3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/beige">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De: Terminal San Juan Bosco\nHacia: Universidad Tecnológica de León."
                android:textColor="#203A39"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Letrero verde sobre el CardView 3 (como CardView) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLabelE04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#4B6844"
        app:layout_constraintStart_toStartOf="@id/cardRoute3"
        app:layout_constraintBottom_toTopOf="@id/cardRoute3">
        <TextView
            android:id="@+id/tvLabelE04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-04"
            android:textColor="#203A39"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </androidx.cardview.widget.CardView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6ECDC"
        app:itemIconTint="#06879C"
        app:itemTextColor="#06879C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout> 